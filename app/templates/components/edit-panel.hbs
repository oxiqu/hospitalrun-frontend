<div class="panel panel-primary">
  <div class="panel-body">
    {{yield}}
  </div>
  <div class="panel-footer">
    {{#unless editPanelProps.hideCancelButton}}
      {{#if editPanelProps.cancelButtonText}}
        <button class="btn btn-default warning" {{action 'cancel'}}>{{editPanelProps.cancelButtonText}}</button>
      {{else}}
        <button class="btn btn-default warning" {{action 'cancel'}}>{{t 'buttons.cancel'}}</button>
      {{/if}}
    {{/unless}}
    {{#if editPanelProps.showUpdateButton}}
      <button class="btn btn-primary on-white {{if editPanelProps.disabledAction 'disabled-btn'}}" {{action editPanelProps.actionForUpdateButton}}>
        {{#if editPanelProps.updateButtonIcon}}
          <i class="{{editPanelProps.updateButtonIcon}}"></i>
        {{/if}}
          {{editPanelProps.updateButtonText}}
      </button>
    {{/if}}
    {{#each editPanelProps.additionalButtons as |btn|}}
      <button class="{{btn.class}}" {{action 'fireButtonAction' btn.buttonAction}}>
        {{#if btn.buttonIcon}}
          <i class="{{btn.buttonIcon}}"></i>
        {{/if}}
        {{btn.buttonText}}
      </button>
    {{/each}}
  </div>
</div>
